<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

</head>
<body>
  <div class="flash-box">
    <% flash.each do | key, value | %>
      <div class="flash <%= key %>"><%= value %></div>
    <% end %>
  </div>
	<%= yield %>
</body>
<footer>
	<%= debug(params) if Rails.env.development? %>
</footer>
</html>
